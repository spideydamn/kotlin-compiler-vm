func sieve(limit: int): int[] {
    let arraySize: int = limit + 1;
    let isPrime: bool[] = bool[arraySize];
    for (let i: int = 0; i <= limit; i = i + 1) {
        isPrime[i] = true;
    }

    isPrime[0] = false;
    isPrime[1] = false;

    let i: int = 2;
    for (; i * i <= limit;) {
        if (isPrime[i]) {
            let j: int = i * i;
            for (; j <= limit;) {
                isPrime[j] = false;
                j = j + i;
            }
        }
        i = i + 1;
    }

    let count: int = 0;
    for (let k: int = 2; k <= limit; k = k + 1) {
        if (isPrime[k]) {
            count = count + 1;
        }
    }

    let primes: int[] = int[count];
    let idx: int = 0;
    for (let k: int = 2; k <= limit; k = k + 1) {
        if (isPrime[k]) {
            primes[idx] = k;
            idx = idx + 1;
        }
    }

    return primes;
}
